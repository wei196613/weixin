.getUser-bg{
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,0.5);
}
.getUser-content{
  width: 90%;
  height: 50%;
  background: #fefefe;
  box-shadow: 0px 0px 20px #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.getUser-content .image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}
.getUser-content image{
  width: 100%;
  height: 100%;
}
.getUser-content view{
  font-size: 48rpx;
  font-weight: 800;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.getUser-content text{
  width: 70%;
  font-size: 32rpx;
  font-weight: 200;
  color: #555;
  margin-bottom: 20rpx;
}
.getUser-content button{
  width: 70%;
  height:100rpx;
  background: #29a346;
  border-radius: 50rpx;
  line-height: 100rpx;
}